{
  "templates": [
    {
      "id": "no_words_letter",
      "type": "restriction",
      "template": "{PLAYER} no puede usar palabras empezadas por la letra {LETTER}",
      "endTemplate": "{PLAYER} ya puede usar todas las palabras",
      "punishment": "Si {PLAYER} usa una palabra prohibida, bebe {DRINKS} tragos",
      "variables": {
        "LETTER": ["T", "S", "M", "P", "C", "B", "R", "D", "L", "N"],
        "DRINKS": ["1", "2", "3", "4"]
      },
      "categoria": "Restricción de palabras",
      "minRounds": 5,
      "maxRounds": 10
    },
    {
      "id": "no_drink_gesture",
      "type": "restriction", 
      "template": "{PLAYER} no puede beber con la mano {HAND}",
      "endTemplate": "{PLAYER} ya puede beber con ambas manos",
      "punishment": "Si {PLAYER} bebe con la mano prohibida, bebe {DRINKS} tragos adicionales",
      "variables": {
        "HAND": ["izquierda", "derecha"],
        "DRINKS": ["1", "2", "3", "4"]
      },
      "categoria": "Restricción física",
      "minRounds": 5,
      "maxRounds": 8
    },
    {
      "id": "must_drink_standing",
      "type": "obligation",
